{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "app.kubernetes.io/managed-by": "atomist_k8s-sdm_minikube",
      "app.kubernetes.io/name": "lff-sdm",
      "app.kubernetes.io/part-of": "lff-sdm",
      "atomist.com/workspaceId": "AR12QA2B3"
    },
    "name": "lff-sdm",
    "namespace": "sdm"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app.kubernetes.io/name": "lff-sdm",
        "atomist.com/workspaceId": "AR12QA2B3"
      }
    },
    "strategy": {
      "rollingUpdate": {
        "maxSurge": 1,
        "maxUnavailable": 0
      },
      "type": "RollingUpdate"
    },
    "template": {
      "metadata": {
        "annotations": {
          "atomist.com/k8vent": "{\"webhooks\":[\"https://webhook.atomist.com/atomist/kube/teams/AR12QA2B3\"]}",
          "atomist.com/ts": "20190516145128"
        },
        "labels": {
          "app.kubernetes.io/managed-by": "atomist_k8s-sdm_minikube",
          "app.kubernetes.io/name": "lff-sdm",
          "app.kubernetes.io/part-of": "lff-sdm",
          "atomist.com/workspaceId": "AR12QA2B3"
        },
        "name": "lff-sdm"
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "ATOMIST_CONFIG_PATH",
                "value": "/opt/atm/client.config.json"
              },
              {
                "name": "ATOMIST_GOAL_LAUNCHER",
                "value": "kubernetes"
              },
              {
                "name": "ATOMIST_POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.namespace"
                  }
                }
              },
              {
                "name": "FORCE_COLOR",
                "value": "1"
              }
            ],
            "image": "atmhoff/lff-sdm:1.0.0",
            "livenessProbe": {
              "failureThreshold": 3,
              "httpGet": {
                "path": "/health",
                "port": "http",
                "scheme": "HTTP"
              },
              "initialDelaySeconds": 20,
              "periodSeconds": 20,
              "successThreshold": 1,
              "timeoutSeconds": 3
            },
            "name": "lff-sdm",
            "ports": [
              {
                "containerPort": 2866,
                "name": "http",
                "protocol": "TCP"
              }
            ],
            "readinessProbe": {
              "failureThreshold": 3,
              "httpGet": {
                "path": "/health",
                "port": "http",
                "scheme": "HTTP"
              },
              "initialDelaySeconds": 20,
              "periodSeconds": 20,
              "successThreshold": 1,
              "timeoutSeconds": 3
            },
            "resources": {
              "limits": {
                "cpu": "2000m",
                "memory": "2048Mi"
              },
              "requests": {
                "cpu": "100m",
                "memory": "384Mi"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/var/run/docker.sock",
                "name": "docker-sock"
              },
              {
                "mountPath": "/opt/atm",
                "name": "lff-sdm",
                "readOnly": true
              }
            ]
          }
        ],
        "serviceAccountName": "lff-sdm",
        "volumes": [
          {
            "hostPath": {
              "path": "/var/run/docker.sock"
            },
            "name": "docker-sock"
          },
          {
            "name": "lff-sdm",
            "secret": {
              "secretName": "lff-sdm"
            }
          }
        ]
      }
    }
  }
}
